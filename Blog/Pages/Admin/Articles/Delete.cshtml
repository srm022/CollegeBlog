@page "{id}"
@model Blog.Pages.Admin.Articles.DeleteModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="inner-section">
    <div class="inner-box">
        <div class="center-section">
            <form method="POST">
                <h2>Delete</h2>
                <br/>
                <p>Are you sure you want to delete this article?
                    <br/>
                    <br/>Article id: <b>@Model.Id</b>
                    <br/>Title: <b>@Model.Title</b></p>
                <br/>
                <input type="submit" class="btn btn-default" value="Delete" />
                <span style="font-size: 11px">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a class="black-link" href="@Url.Page("/Admin/Articles/Index")">Cancel</a></span>
            </form>
        </div>
    </div>
</div>