@page
@model Blog.Pages.IndexModel

@{
    ViewData["Title"] = "My blog";
    Layout = "_Layout";
}
<br />
<div class="article-section">
    @{
        foreach (var article in Model.Articles)
        {
            <div class="article">
                <div class="article-header">
                    <div class="title">
                        @article.Title
                    </div>
                    <div class="author">
                        Written by: <b>@article.Author</b>
                    </div>
                    <div class="date">
                        @article.DatePublished.ToString("dd MMMM yyyy")
                    </div>
                </div>
                <div class="article-image"></div>
                <div class="center-section">
                    <p>
                        @article.Content
                    </p>
                </div>
            </div>
            <br />
        }
    }

