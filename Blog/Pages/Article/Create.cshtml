@page
@using Blog.Models.Article
@model Blog.Pages.Article.CreateArticleModel

@{
    ViewData["Title"] = "Create an article";
    Layout = "_Layout";
}

<div class="inner-section">
    <div class="inner-box">
        <form method="POST">
            <div class="center-section">
                <h2>Create an article</h2>
                <br />
                <label>Title:</label><br />
                @Html.TextBoxFor(model => model.Model.Title)<br /><br />
                <label>Category:</label><br />
                @Html.DropDownListFor(model => model.Model.ArticleCategoryId, Html.GetEnumSelectList<ArticleCategory>())<br /><br />
                <label>Article:</label><br />
                @Html.TextAreaFor(model => model.Model.Content, new { @cols = "100", @rows = "8", @style = "width:100%; resize: none;" })
                <br />
                <br />
                <input type="submit" class="btn btn-default" value="Create" />
                <span style="font-size: 11px">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a class="black-link" href="@Url.Page("/Index")">Cancel</a></span>
            </div>
        </form>
    </div>
</div>