@page
@model Blog.Pages.ContactModel

@{
    ViewData["Title"] = "Contact";
    Layout = "_Layout";
}
<div class="inner-section">
    <div class="inner-box">
        <form method="POST">
            <div class="center-section">
                <h2>Contact form</h2>
                <br />
                <label>Your e-mail:</label><br />
                @Html.TextBoxFor(model => model.Model.SenderMail)<br /><br />
                <p class="validation-message">@Html.ValidationMessageFor(model => model.Model.SenderMail)</p>
                <label>Your name:</label><br />
                @Html.TextBoxFor(model => model.Model.SenderName)<br /><br />
                <p class="validation-message">@Html.ValidationMessageFor(model => model.Model.SenderName)</p>
                <label>Subject:</label><br />
                @Html.TextBoxFor(model => model.Model.Subject)<br /><br />
                <p class="validation-message">@Html.ValidationMessageFor(model => model.Model.Subject)</p>
                <label>Message:</label><br />
                @Html.TextAreaFor(model => model.Model.Content, new { @cols = "100", @rows = "8", @style = "width:100%; resize: none;" })
                <p class="validation-message">@Html.ValidationMessageFor(model => model.Model.Content)</p>
                <br />
                <br />
                <input type="submit" class="btn btn-default" value="Send the message" />
            </div>
        </form>
    </div>
    <br />
</div>